@model IEnumerable<Czytelnia.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h2>Przeglądaj</h2>

<p>
    <a asp-action="Create">Nowa książka</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Tytuly"]">@Html.DisplayNameFor(model => model.Tytul)</a>
</th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Autorzy"]">@Html.DisplayNameFor(model => model.Autor)</a>
</th>
            <th>
                @Html.DisplayNameFor(model => model.Gatunek)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nazwisko)
                @Html.DisplayFor(modelItem => item.Autor.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gatunek)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>

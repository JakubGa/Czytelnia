@model Czytelnia.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h2>Usuń</h2>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Na pewno chcesz usunąć książkę?
    Jej przywrócenie nie będzie możliwe</h3>
<div>
    <h4>Książka</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Tytul)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tytul)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Autor.Imie)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Autor.Nazwisko)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Gatunek)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gatunek)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Usuń" class="btn btn-default" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>

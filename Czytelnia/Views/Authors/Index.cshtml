@model IEnumerable<Czytelnia.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista autorów</h2>

<p>
    <a asp-action="Create">Dodaj autora</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                <a asp-action="Edytuj" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Szczegóły" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Usuń" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

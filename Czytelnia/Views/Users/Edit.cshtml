@model Czytelnia.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h2>Edycja</h2>

<h4>Czytelnik</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zapisany_od" class="control-label"></label>
                <input asp-for="Zapisany_od" class="form-control" />
                <span asp-validation-for="Zapisany_od" class="text-danger"></span>
            </div>
            <div>
                @Html.DisplayNameFor(model => model.Books)
            </div>
            <div>
                <table class="table">
                    <tr>
                        <th>Tytuł</th>
                        <th>Autor</th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tytul)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Autor)
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="form-group">
                
                <select asp-for="Books" class="form-control" asp-items="ViewBag.Books">
                    <option value="">-- Wybierz książkę --</option>
                </select>
                <span asp-validation-for="Books" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz/wypożycz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
